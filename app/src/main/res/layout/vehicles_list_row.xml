<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_layout"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vehicleImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/vehicleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Nazwa pojazdu" />

            <TextView
                android:id="@+id/averageConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vehicleName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Średnie spalanie"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vehicleFuelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/averageConsumption"
                android:layout_marginStart="10dp"
                android:text="Typ paliwa"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tankCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/vehicleName"
                android:text="Pojemność baku"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/fuelLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_below="@id/tankCapacity"
                android:text="Stan baku"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/deleteVehicleButton"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/ic_baseline_cancel_24" />


        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>